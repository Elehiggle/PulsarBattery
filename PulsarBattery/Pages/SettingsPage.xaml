<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PulsarBattery.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="32,24,32,32">
            <StackPanel Spacing="24" MaxWidth="1000">

                <!-- Monitoring Section -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Monitoring" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}"
                               Margin="0,0,0,8" />

                    <!-- Battery check interval card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="2">
                                <TextBlock Text="Battery check interval" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                <TextBlock Text="How often the app polls the device and updates the dashboard" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <NumberBox Grid.Column="1"
                                       Minimum="0.1"
                                       Maximum="120"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{Binding PollIntervalMinutes, Mode=TwoWay}"
                                       Width="120"
                                       VerticalAlignment="Center"
                                       PlaceholderText="Minutes" />
                        </Grid>
                    </Border>

                    <!-- Log interval card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="2">
                                <TextBlock Text="Log interval" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                <TextBlock Text="How often readings are added to history" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <NumberBox Grid.Column="1"
                                       Minimum="0.1"
                                       Maximum="240"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{Binding LogIntervalMinutes, Mode=TwoWay}"
                                       Width="120"
                                       VerticalAlignment="Center"
                                       PlaceholderText="Minutes" />
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Notifications Section -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Notifications" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}"
                               Margin="0,0,0,8" />

                    <!-- Notification settings card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <StackPanel Spacing="2">
                                <TextBlock Text="Notification Settings" 
                                           Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                <TextBlock Text="Test and verify Windows notifications are configured correctly" 
                                           Style="{ThemeResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="Send test notification" 
                                        Click="SendTestNotification_Click"
                                        Style="{ThemeResource AccentButtonStyle}" />
                                <Button Content="Refresh status" 
                                        Click="RefreshNotificationStatus_Click" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
